{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "A simple API with TypeScript, express.js and tested with SuperTest",
  "main": "app.js",
  "type": "module",
  "repository": "https://github.com/safaa-alnabulsi/todo-api.git",
  "author": "Safaa Alnabulsi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc -p tsconfig.json",
    "start": "concurrently \"tsc -w\" \"nodemon --enable-source-maps --experimental-modules dist/app.js\"",
    "test": "yarn build && NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "release": "standard-version",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^25.0.3",
    "@types/sinon": "^21.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "semantic-release": "^25.0.2",
    "sinon": "^21.0.1",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "mongoose": "^9.1.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  }
}
