{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "A simple API with TypeScript, express.js and tested with SuperTest",
  "main": "app.js",
  "type": "module",
  "repository": "https://github.com/safaa-alnabulsi/todo-api.git",
  "author": "Safaa Alnabulsi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc -p tsconfig.json",
    "start": "concurrently \"tsc -w\" \"nodemon --enable-source-maps --experimental-modules dist/app.js\"",
    "test": "yarn build && NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "release": "standard-version",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.12.12",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "semantic-release": "^23.1.1",
    "sinon": "^17.0.2",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "eslint": "^8.57.0",
    "express": "^4.19.2",
    "mongoose": "^8.3.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  }
}
