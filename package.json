{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "A simple API with TypeScript, express.js and tested with SuperTest",
  "main": "app.js",
  "type": "module",
  "repository": "https://github.com/safaa-alnabulsi/todo-api.git",
  "author": "Safaa Alnabulsi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc -p tsconfig.json",
    "start": "concurrently \"tsc -w\" \"nodemon --enable-source-maps --experimental-modules dist/app.js\"",
    "test": "yarn build && NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "release": "standard-version",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.17",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.4.5",
    "@types/sinon": "^10.0.15",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "semantic-release": "^21.0.7",
    "sinon": "^15.2.0",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "eslint": "^8.45.0",
    "express": "^4.18.2",
    "mongoose": "^7.4.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  }
}
